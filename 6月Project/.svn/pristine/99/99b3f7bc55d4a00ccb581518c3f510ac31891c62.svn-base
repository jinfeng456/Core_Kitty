using GK.WCS.Common;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace GK.WCS.Carrier.dto
{
    public class CarrierStatus
    {
       public Dictionary<int,int> CarrierStatusDB(byte[] b,int number,int offset)
        {
            Dictionary<int, int> carrierTaskNo = new Dictionary<int, int>();
            int nameBegin = 1000;
           
            if (offset == 2)
            {
                for(int i = 1; i < number; i++)
                {
                    nameBegin += 1;
                    carrierTaskNo.Add(nameBegin, Tools.ushort16(b, (i - 1) * offset));
                }
            }
            else if (offset == 4)
            {
                for (int i = 1; i < number; i++)
                {
                    nameBegin += 1;
                    carrierTaskNo.Add(nameBegin, Tools.int32(b, (i - 1) * offset));
                }
            }
            return carrierTaskNo;

        }
       
    }
}

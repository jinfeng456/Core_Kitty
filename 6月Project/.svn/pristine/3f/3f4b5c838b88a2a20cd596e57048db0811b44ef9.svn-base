using GK.Common;
using Oracle.DataAccess.Client;
using System;
using System.Collections.Generic;
using System.Configuration;
using System.Data;
using System.Data.Common;
using System.Text;

namespace GK.WMS.Common
{
    public class DBUtils
    {
        private static IDbConnection WCSConnection = null;
        static DBUtils(){   
            Dapper.DefaultTypeMap.MatchNamesWithUnderscores = true;
        }
        private static IDbConnection WMSConnection = null;
        public static IDbConnection CreateWMSConnection(GKDBType type)
        {

            if (type == GKDBType.sqlserver)
            {
                ConnectionStringSettings connectionStringSettings = ConfigurationManager.ConnectionStrings["DB_WMS"];
                IDbConnection connection =
                    DbProviderFactories.GetFactory(connectionStringSettings.ProviderName).CreateConnection();
                connection.ConnectionString = connectionStringSettings.ConnectionString;
                WMSConnection = connection;
            }


            if (type == GKDBType.oracle)
            {
                ConnectionStringSettings connectionStringSettings = ConfigurationManager.ConnectionStrings["DB_WMS"];
                var connection = new OracleConnection(connectionStringSettings.ConnectionString);
                connection.Open();
                WMSConnection = connection;
            }


            return WMSConnection;
        }



    }
}

    public class CarrierWriteConnect22:CarrierWriteConnect {
        public CarrierWriteConnect22() : base(2) {
        }
        public override ushort getSendAddr() {
            return 6;
        }

        public override ushort getResetCarrierAddr() {
            return 11;
        }
        public override ushort getClearTaskAddr() {
            return 12;
        }

        public void send(ushort carrier) {
            int data = (carrier)*256+2;
            ushort addr = (ushort)((35-carrier)/ 2);
            string info = "传输线无任务号任务" + carrier;

            lock(socketLock) {
                var uTask = new List<ushort>();
                uTask.Add((ushort)data); // 信息
                write(addr,uTask.ToArray(),info);
            }
        }
    }

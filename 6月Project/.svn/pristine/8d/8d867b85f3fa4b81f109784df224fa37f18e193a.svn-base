using System;
using System.Collections.Generic;
using System.Data.SqlClient;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace HY.WCS.DAL {
    static class SqlUtil {
        public static String eq(List<SqlParameter> parameters,String name,String value) {
            String sql = "";

            if(!String.IsNullOrEmpty(value)) {
                sql += " and ["+ name + "]=@"+ name;
                parameters.Add(new SqlParameter("@"+ name,value));
            }
            return sql;

        }

        public static String gt(List<SqlParameter> parameters,String fieldName,String paramName,double value,int noUse) {
            String sql = "";

            if(noUse!=value) {
                sql += " and [" + fieldName + "]>@" + paramName;
                parameters.Add(new SqlParameter("@" + paramName,value));
            }
            return sql;

        }

        public static String lt(List<SqlParameter> parameters,String fieldName,String paramName,double value,int noUse) {
            String sql = "";
            if(noUse != value) {
                sql += " and [" + fieldName + "]<@" + paramName;
                parameters.Add(new SqlParameter("@" + paramName,value));
            }
            return sql;

        }


        public static String eq(List<SqlParameter> parameters,String name,int value,int noUse) {
            String sql = "";
            if(noUse!=value) {
                sql += " and [" + name + "]=@" + name;
                parameters.Add(new SqlParameter("@" + name,value));
            }
            return sql;

        }

        public static String eq(List<SqlParameter> parameters,String name,long value,long noUse) {
            String sql = "";
            if(noUse != value) {
                sql += " and [" + name + "]=@" + name;
                parameters.Add(new SqlParameter("@" + name,value));
            }
            return sql;

        }

        public static String like(List<SqlParameter> parameters,String name,String value) {
            String sql = "";

            if(!String.IsNullOrEmpty(value)) {
                sql += " and " + name + " like @" + name;
                parameters.Add(new SqlParameter("@" + name,"%"+value+"%"));
            }
            return sql;

        }
    }
}
